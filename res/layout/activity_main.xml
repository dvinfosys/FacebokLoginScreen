<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_activity"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:background="#1156de"
    tools:context="com.example.vaksys_49.facebok_login.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/textfacebook"
        />
    <TextView
        android:id="@+id/email"
        android:text="Email : "
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textfacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mail"
        android:textSize="25dp"
        android:background="#ffff"
        android:hint="Enter Email Only"
        android:inputType="textEmailAddress"
        android:layout_below="@id/email"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textpassword"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/mail"
        android:text="Password : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/password"
        android:background="#ffff"
        android:padding="2dp"
        android:textSize="25dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_below="@+id/textpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <CheckBox
        android:id="@+id/checkbox"
        android:textColor="#ffffff"
        android:text="Save Login"
        android:textSize="25dp"
        android:checked="true"
        android:layout_below="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/account"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="need Accound? \n Sign Up Using Your Phone"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
